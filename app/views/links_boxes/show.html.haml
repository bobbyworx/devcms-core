.section.regularPage
  - readspeaker do
    = readspeaker_button :class => 'topRightReadspeaker'

    %h1= h @links_box.title

    = render :partial => '/shared/metadata', :locals => { :publication_date => @links_box.publication_start_date, :last_update_date => @links_box.last_updated_at }

    - if @links_box.description.present?
      = content_tag(:div, w(@links_box.description), :class => 'htmlField')

    - unless @children.empty?
      %ul.section_items
        - @children.each do |node|
          - if node.content_type_configuration[:show_in_menu]
            %li
              = image_tag "icons/#{node.content.icon_filename}", :class => 'icon', :alt => h(node.content.title)
              = link_to_node h(node.content.title), node
              %p= node.content.description

    .buttons.clearfix
      = print_button
