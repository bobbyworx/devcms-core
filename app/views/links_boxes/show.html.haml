.section.regularPage
  - readspeaker do
    = readspeaker_button :class => 'topRightReadspeaker'

    %h1= h @links_box.title

    = render :partial => '/shared/metadata', :locals => { :publication_date => @links_box.publication_start_date, :last_update_date => @links_box.last_updated_at(current_user) }

    - if @links_box.description.present?
      = content_tag(:div, w(@links_box.description), :class => 'htmlField')

    - unless @children.empty?
      %ul.section_items
        - @children.each do |content_node|
          - if content_node.node.content_type_configuration[:show_in_menu]
            %li
              = image_tag "icons/#{content_node.icon_filename}", :class => 'icon', :alt => h(content_node.title)
              = link_to_content_node h(content_node.title), content_node
              %p= content_node.description

    .buttons.clearfix
      = print_button
