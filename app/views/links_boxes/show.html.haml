.linksBox.regularPage
  - readspeaker do
    = readspeaker_button :class => 'topRightReadspeaker'

    %h1= h @links_box.title

    - if @links_box.description.present?
      .htmlField
        = w @links_box.description

    - if @links_box.content_children.exists?
      .themeOverview
        = render :partial => '/link_themes/listing', :locals => { :items => @links_box.content_children }

    - if @links_box.sub_themes.exists?
      %h2= t "#{@links_box.controller_name}.sub_themes"
      = render :partial => '/themes/listing', :locals => { :container => @links_box, :depth => 1, :max_depth => 4 }

    .buttons.clearfix
      = print_button
