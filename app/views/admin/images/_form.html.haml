= form.text_field :alt,             :label => t('images.alt')
= form.text_area  :description,     :label => t('images.description'), :rows => 4

- if @show_image_url_control
  = form.text_field :url, :label => t('images.url')

  %div{ :style => "margin-top: -9px; margin-bottom: 15px; font-size: 9px;" }
    = t 'images.url_explanation'

= form.check_box :show_in_listing,  :label => t('images.show_in_listing')

- if current_user.has_role?('admin')
  = form.check_box :is_for_header,  :label => t('images.is_for_header')

- if record.new_record?
  = form.file_field :file, :label => t('images.data')
- else
  = wrap_with_label render_cropper(@image, :style => 'margin-left: 120px'), :text => t('images.cropped'), :for => "image_#{@image.id}"

= hidden_field_tag :parent_node_id, params[:parent_node_id]