= render :partial => 'show'

.forms
  - remote_form_for object, :method => :get, :url => url_for(:controller => controller.controller_name, :action => :new, :format => 'html', :parent_node_id => @parent_node.id), :update => 'right_panel_body' do |form|
    = render :partial => 'preview_form', :locals => { :form => form }
    = form.submit t('shared.edit')

  - remote_form_for object, :url => url_for(:controller => controller.controller_name, :format => 'html', :parent_node_id => @parent_node.id), :update => 'right_panel_body' do |form|
    = render :partial => 'preview_form', :locals => { :form => form }
    = form.submit t('shared.save')
