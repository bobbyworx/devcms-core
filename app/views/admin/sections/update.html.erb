<% if @for_approval %>
  <%= javascript_tag "Ext.getCmp('approvals-grid').getStore().reload();" -%>
<% else %>
  <% javascript_tag do -%>
    var section = treePanel.getNodeById('<%= @section.node.id -%>')
    section.setText('<%= @section.node.tree_text -%>')
    section.reload();
  <% end -%>

  <%= update_message %>
<% end %>
