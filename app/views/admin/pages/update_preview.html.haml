= render :partial => 'show', :locals => { :record => @page }

.forms
  - remote_form_for @page, :method => :get, :url => edit_admin_page_path(@page, :format => 'html'), :update => 'right_panel_body' do |form|
    = render :partial => 'preview_form', :locals => { :form => form }
    = form.submit t('shared.edit')

  - remote_form_for @page, :url => admin_page_path(@page, :format => 'html'), :update => 'right_panel_body' do |form|
    = render :partial => 'preview_form', :locals => { :form => form }
    = form.submit t('shared.save')
