<div class="regularPage feed">
  <h2><%=h @feed.title -%></h2>

  <div class="metadata">
    <p class="lastUpdateDate"><%=t 'shared.last_updated' -%>: <%=l @feed.updated_at, :format => :long -%></p>
  </div>

  <% @feed.entries[0..3].each_with_index do |entry, i| %>
  <div class="feedItem">
    <h3><%= link_to h(entry.title), '#' -%></h3>

    <div class="clearfix">
      <%=w tidy_html(simple_format(entry.content.to_s.strip)) -%>
    </div>
  </div>
  <% end %>

  <% unless @feed.entries[4..20].nil? || @feed.entries[4..20].empty? %>
  <h3><%=t 'feeds.older_feed_items' -%></h3>
  <table cellpadding="0" cellspacing="0" id="items">
    <thead><tr><th scope="col" class="gray"><%=t 'feeds.title' -%></th></tr></thead>
    <tbody>
      <% @feed.entries[4..20].each_with_index do |entry, i| %>
          <tr <% if i.even? %>class="alt"<% end %>>
            <td><%=link_to h(entry.title), '#' -%></td>
          </tr>
      <% end %>
  </tbody>
  </table>
  <% end %>
</div>
