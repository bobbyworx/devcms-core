.regularPage.newsArchive
  %h2= h @news_archive.title

  - unless @news_archive.new_record?
    .metadata
      %p.lastUpdateDate
        == #{t 'shared.last_updated'}: #{l @news_archive.last_updated_at(current_user), :format => :long}

  - if @news_archive.description.present?
    .htmlField.newsArchiveDescription
      = w @news_archive.description

  = render :partial => '/admin/news_items/news_items', :locals => { :news_items => @news_items, :latest_news_items => @latest_news_items, :news_items_for_table => @news_items_for_table }
