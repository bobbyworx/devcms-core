- cache(:content_box_for => node.id, :last_updated_at => node.content.last_updated_at, :site => current_site.id, :day => Date.today.cwday) do
  - content = node.content
  - header_image = node.children.accessible.with_content_type('Image').include_content.first.try(:content)
  - if header_image.present?
    = image_tag(content_node_path(header_image, :action => :sidebox,  :format => :jpg), :alt => header_image.alt.to_s, :class => 'content_box_header')
  - else
    = image_tag 'contact_box_header.png', :alt => ''

  .contact_wrapper
    .contact_information
      .wrapper.clearfix
        .text
          = w content.contact_information
          - more_addresses_url = Settler[:contact_box_more_addresses_url] || '/contact'
        = link_to t('contact_boxes.more_addresses'), more_addresses_url, :class => 'read_more_link'

    .opening_hours
      %h2= t 'contact_boxes.opening_hours'

      .wrapper.clearfix
        = w text_for_today(content)
        = link_to t('contact_boxes.more_times'), (Settler[:contact_box_more_times_url] || more_addresses_url), :class => 'read_more_link'
