.regularPage
  %h1== #{t 'users.profile_of'} #{@user.login}

  %table#user_details{ cellpadding: 0, cellspacing: 0 }
    %caption= t 'users.user_details_caption'
    %tr#login
      %th{ scope: 'row' }= t 'users.login'
      %td= @user.login

    - if @user.full_name.present?
      %tr#full_name
        %th{ scope: 'row' }
          = t 'users.full_name'
        %td= h @user.full_name

    - if @user.sex.present?
      %tr#sex
        %th{ scope: 'row' }
          = t 'users.sex'
        %td= t "users.#{User::SEXES[@user.sex]}"

    - if current_user == @user
      %tr#email_address
        %th{ scope: 'row' }
          = t 'users.email_address'
        %td
          = h @user.email_address
          %br/
          %small= t 'users.not_public'

    %tr#joined_at
      %th{ scope: 'row' }
        = t 'users.joined_at'
      %td= l(@user.created_at.to_date, format: :long)

    - if @user.renewed_password_at.present?
      %tr#renewed_password_at
        %th{ scope: 'row' }
          = t 'users.renewed_password_at'
        %td= l(@user.renewed_password_at.to_date, format: :long)

    %tr#verified
      %th{ scope: 'row' }
        = t 'users.verified?'
      %td= t @user.verified? ? 'shared.y' : 'shared.n'

  .buttons.clearfix
    = edit_button t('users.edit_details') do
      = link_to t('users.edit_details'), secure_url(:url_for, { action: 'edit' })
    = delete_button t('users.delete_user') do
      = link_to t('users.delete_user'), secure_url(:url_for, { action: 'confirm_destroy' })

  = render partial: 'weblogs'

  = form_for @user, as: :user, url: secure_url(:url_for, { action: 'update' }) do |f|
    %div= hidden_field_tag(:update_newsletters_and_interests, 1)

    = render :partial => '/users/newsletters'
    = render :partial => '/users/interests'

    .formButtonCt.clearfix
      - if @newsletter_archives.any? || @interests.any?
        = submit_tag t('users.save'), class: 'submit left'
      = link_to    t('layouts.logout'), logout_path, class: 'right', method: :delete
