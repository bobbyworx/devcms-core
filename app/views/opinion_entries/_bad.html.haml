.opinionEntry
  %h1{ style: 'color:#55a447;' }
    =t('opinions.bad')
  = form_for @opinion_entry, url: opinion_entries_path do |f|
    = hidden_field_tag 'feeling', @feeling
    = hidden_field_tag 'node_id', @redirectnode.id
    = hidden_field_tag 'opinion_id', @opinion.id
    %fieldset
      %legend= t('opinions.why', opinion: t('opinions.bad2'))
      = radio_button_tag(:description, '1')
      = label_tag(:description_1, @opinion.entry_3_1)
      %br
      = radio_button_tag(:description, '2')
      = label_tag(:description_2, @opinion.entry_3_2)
      %br
      = radio_button_tag(:description, '3')
      = label_tag(:description_3, @opinion.entry_3_3)
      %br
      = radio_button_tag(:description, '4')
      = label_tag(:description_4, @opinion.entry_3_4)
    %br
    = label_tag(:text, t('opinions.before_text'))
    %br
    = text_area_tag(:text, nil, size: "60x6")
    %br
    = submit_tag t('opinions.submit')
  = link_to t('opinions.annul'), content_node_path(@opinion.parent)
