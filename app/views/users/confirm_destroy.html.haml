%h1== #{t 'users.deletion_of'} #{h @user.login}

= error_messages_for :user

- form_for @user, :url => secure_url(:url_for, { :action => 'destroy', :id => @user }), :html => {:method => 'delete'} do |f|

  = t 'users.confirm_user_deletion'

  .formFieldCt.clearfix
    %label{ :for => "user_password" }
      = t 'users.password'
      = f.password_field :password, :class => 'textfield'

  .formButtonCt
    = submit_tag t('users.delete_user'), :class => 'left submit'
    = link_to    t('users.back'), user_path(@user), :class => 'right'
