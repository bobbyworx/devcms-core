- content = node.content
- if content.url.present?
  = link_to(image_tag(sidebox_image_path(content, :format => :jpg), :alt => content.alt.to_s), h(content.url), :title => "#{h content.description}", :class => 'clearfix')
- else
  = link_to_node(image_tag(sidebox_image_path(content, :format => :jpg), :alt => content.alt.to_s) + content_tag('div', content.title, :class => 'hidden'), node, { :action => :full }, { :rel => "lightbox['sidebox']", :title => 'Vergroot deze afbeelding' })
