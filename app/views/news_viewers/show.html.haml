.regularPage.news_itemArchive
  = readspeaker(@news_viewer.node.id) do |readspeaker_id|
    %h1= h @news_viewer.title

    = render :partial => '/shared/metadata', :locals => { :last_update_date => @news_viewer.last_updated_at }

    - if @news_viewer.description.present?
      .htmlField.news_itemViewerDescription
        = w @news_viewer.description

      - if Settler[:readspeaker_cid].present?
        .buttons.clearfix
          = readspeaker_button(:rid => readspeaker_id, :title => h(@news_viewer.title))

  = render :partial => 'news_items/news_items', :locals => { :news_items => @news_items, :latest_news_items => @latest_news_items, :news_items_for_table => @news_items_for_table, :show_bread_crumbs => true, :show_archive_link => true }
